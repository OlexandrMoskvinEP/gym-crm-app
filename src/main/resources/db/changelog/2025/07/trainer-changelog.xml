<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.32.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="GCA-59-Add-Table-Trainers-1751656088490-1" author="AlexM">
        <createTable tableName="trainers">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trainers"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="specialization_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="GCA-59-Add-UC-UserId-On-Trainers-1751656088490-2" author="AlexM">
        <addUniqueConstraint columnNames="user_id" constraintName="uc_trainers_user" tableName="trainers"/>
    </changeSet>

    <changeSet id="GCA-59-Add-FK-SpecializationId-On-Trainers-1751656088490-3" author="AlexM">
        <addForeignKeyConstraint baseColumnNames="specialization_id" baseTableName="trainers"
                                 constraintName="FK_TRAINERS_ON_SPECIALIZATION" referencedColumnNames="id"
                                 referencedTableName="training_types"/>
    </changeSet>

    <changeSet id="-GCA-59-Add-FK-UserId-On-Trainers-1751656088490-4" author="AlexM">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="trainers" constraintName="FK_TRAINERS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>