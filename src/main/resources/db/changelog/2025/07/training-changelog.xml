<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.32.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1751656112313-1" author="AlexM">
        <createTable tableName="trainings">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trainings"/>
            </column>
            <column name="training_name" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="training_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="training_duration" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="trainer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="trainee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="training_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1751656112313-2" author="AlexM">
        <addForeignKeyConstraint baseColumnNames="trainee_id" baseTableName="trainings"
                                 constraintName="FK_TRAINING_TRAINEE" referencedColumnNames="id"
                                 referencedTableName="trainees"/>
    </changeSet>
    <changeSet id="1751656112313-3" author="AlexM">
        <addForeignKeyConstraint baseColumnNames="trainer_id" baseTableName="trainings"
                                 constraintName="FK_TRAINING_TRAINER" referencedColumnNames="id"
                                 referencedTableName="trainers"/>
    </changeSet>
    <changeSet id="1751656112313-4" author="AlexM">
        <addForeignKeyConstraint baseColumnNames="training_type_id" baseTableName="trainings"
                                 constraintName="FK_TRAINING_TRAINING_TYPE" referencedColumnNames="id"
                                 referencedTableName="training_types"/>
    </changeSet>

</databaseChangeLog>