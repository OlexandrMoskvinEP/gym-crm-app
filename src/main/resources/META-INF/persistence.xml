<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="gym-unit" transaction-type="RESOURCE_LOCAL">
        <class>com.gym.crm.app.domain.model.Trainer</class>
        <class>com.gym.crm.app.domain.model.Trainee</class>
        <class>com.gym.crm.app.domain.model.Training</class>
        <class>com.gym.crm.app.domain.model.TrainingType</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gym_crm_db"/>
            <property name="jakarta.persistence.jdbc.user" value="gym"/>
            <property name="jakarta.persistence.jdbc.password" value="gym"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
